{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"outDir": "dist",
		"lib": [
			"es6",
			"es2019",
			"dom"
		],
		"jsx": "react",
		"strict": true,
		"rootDir": "src",
		"declaration": true,
		"skipLibCheck": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
