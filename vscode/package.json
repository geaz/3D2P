{
	"name": "3d2p.vscode",
	"publisher": "3d2p",
	"displayName": "3D2P - 3D Print Projects",	
	"author": "Gerrit 'Geaz' Gazic",
	"license": "MIT",
	"description": "3D Print Projects Management in VS Code",
	"version": "0.5.0",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:3d2p.cmd.initProject",
		"workspaceContains:3D2P.json"
	],
	"contributes": {
		"commands": [
			{
				"command": "3d2p.cmd.initProject",
				"title": "3D2P: Initialize 3D Print Project"
			},			
			{
				"command": "3d2p.cmd.uploadProject",
				"title": "3D2P: Upload Project"
			},
			{
				"command": "3d2p.cmd.addGalleryImage",
				"title": "3D2P: Add image to gallery",
				"icon": {
					"light": "resources/images/icons/light/add.png",
					"dark": "resources/images/icons/dark/add.png"
				}
			},
			{
				"command": "3d2p.cmd.removeGalleryImage",
				"title": "Remove"
			},
			{
				"command": "3d2p.cmd.openStlWebview",
				"title": "3D2P: Open STL Webview"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "3d2p.cmd.uploadProject",
					"when": "3d2p.context.activated"
				},
				{
					"command": "3d2p.cmd.addGalleryImage",
					"when": "3d2p.context.activated"
				},
				{
					"command": "3d2p.cmd.removeGalleryImage",
					"when": "false"
				},
				{
					"command": "3d2p.cmd.openStlWebview",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "3d2p.cmd.addGalleryImage",
					"when": "view == 3d2p.view.gallery",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "3d2p.cmd.removeGalleryImage",
					"when": "view == 3d2p.view.gallery"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "3d2pViewContainer",
					"title": "3D Print Project",
					"icon": "resources/images/3d-printer-variant.svg"
				}
			]
		},
		"views": {
			"3d2pViewContainer": [
				{
					"id": "3d2p.view.stl",
					"name": "STLs",
					"when": "3d2p.context.activated"
				},
				{
					"id": "3d2p.view.gallery",
					"name": "Gallery",
					"when": "3d2p.context.activated"
				}
			]
		},
		"configuration": {
            "type": "object",
            "title": "3D2P Configuration",
            "properties": {
                "3d2p.apiEndpoint": {
                    "type": "string",
                    "default": "localhost",
                    "description": "The url of the api endpoint of 3D2P. Normally it is not necessary to change this."
				},
				"3d2p.apiPort": {
                    "type": "number",
                    "default": 5001,
                    "description": "The port of the api endpoint of 3D2P. Normally it is not necessary to change this."
                },
				"3d2p.strictSSL": {
                    "type": "boolean",
                    "default": true,
                    "description": "Should the SSL certificate be strictly checked during api calls?"
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "npx npm-run-all compile:*",
		"compile:apps": "npx webpack --config webpack.config.js",
		"compile:vsc": "npx tsc -p ./",
		"watch": "npx tsc -watch -p ./"
	},
	"devDependencies": {
		"3d2p.preact.components": "file:../components",
		"@types/glob": "^7.1.1",
		"@types/node": "^12.12.32",
		"@types/vscode": "^1.43.0",
		"@types/webgl2": "0.0.5",
		"glob": "^7.1.6",
		"htm": "^3.0.3",
		"npm-run-all": "^4.1.5",
		"preact": "^10.3.4",
		"ts-loader": "^6.2.2",
		"typescript": "^3.8.3",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11"
	}
}
